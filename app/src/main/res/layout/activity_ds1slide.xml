<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:screenOrientation="portrait"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnSlidePlus"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:onClick="onMinus"
        android:text="+"
        app:layout_constraintEnd_toEndOf="@+id/sb_slide"
        app:layout_constraintTop_toBottomOf="@+id/sb_slide" />

    <Button
        android:id="@+id/btnSlideMinus"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:onClick="onMinus"
        android:text="-"
        app:layout_constraintStart_toStartOf="@+id/sb_slide"
        app:layout_constraintTop_toBottomOf="@+id/sb_slide" />

    <SeekBar
        android:id="@+id/sb_slide"
        android:layout_width="0dp"
        android:layout_height="22dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:max="200"
        android:progress="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_ds1slide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="@+id/sb_slide"
        app:layout_constraintStart_toStartOf="@+id/sb_slide"
        app:layout_constraintTop_toBottomOf="@+id/sb_slide" />

</androidx.constraintlayout.widget.ConstraintLayout>